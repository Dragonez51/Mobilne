<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mój Profil"
        android:background="@color/Niebieski"
        android:textColor="@color/white"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        />
    <TextView
        android:id="@+id/emailView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="uzytkownik@domena.pl"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasło: "
        />
    <TextView
        android:id="@+id/passwordView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:text="lmao"
        />

    <Button
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Pomarańczowy"
        android:textColor="@color/black"
        android:text="Edytuj"
        />

    <TextView
        android:id="@+id/err1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Błąd: Nieprawidłowy format emaila."
        android:visibility="gone"
        android:textColor="#f00"
        />
    <TextView
        android:id="@+id/err2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Błąd: Hasła nie pasują do siebie."
        android:visibility="gone"
        android:textColor="#f00"
        />
    <TextView
        android:id="@+id/correct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil zaktualizowany! Nowy email: "
        android:visibility="gone"
        android:textColor="#0f0"
        />
    <TextView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edycja profilu anulowana."
        android:visibility="gone"
        android:textColor="#a5a5a5"
        />
</LinearLayout>